generator client {
  provider      = "prisma-client-js"
  output        = "../generated/client"
  binaryTargets = ["native", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Models
model Pool {
  id           String   @id @default(cuid())
  address      String   @unique
  token0Id     String
  token0       Token    @relation("PoolToken0", fields: [token0Id], references: [id], onDelete: Cascade)
  token1Id     String
  token1       Token    @relation("PoolToken1", fields: [token1Id], references: [id], onDelete: Cascade)
  fee          Int
  liquidity    String?
  tick         Int?
  swaps        Swap[]
  sqrtPriceX96 String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("pools")
}

model Swap {
  id              String   @id @default(cuid())
  sender          String
  recipient       String
  amount0         String
  amount1         String
  sqrtPriceX96    String
  tick            Int
  transactionHash String
  logIndex        Int
  poolAddress     String
  poolId          String
  pool            Pool     @relation(fields: [poolId], references: [id], onDelete: Cascade)
  gasUsed         Int
  gasPrice        String
  createdAt       DateTime @default(now())

  @@unique([transactionHash, logIndex])
  @@index([poolAddress, createdAt(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@map("swaps")
}

model IndexerState {
  id         String   @id @default("singleton")
  lastBlock  BigInt   @default(0)
  lastUpdate DateTime @default(now())

  @@map("indexer_state")
}

model Token {
  id            String           @id @default(cuid())
  address       String           @unique()
  symbol        String
  name          String
  decimals      Int
  logoUri       String?
  coingeckoId   String?
  tags          String[]
  poolsAsToken0 Pool[]           @relation("PoolToken0")
  poolsAsToken1 Pool[]           @relation("PoolToken1")
  Statistic     TokenStatistic[]
}

model TokenStatistic {
  id               String   @id @default(cuid())
  tokenId          String
  token            Token    @relation(fields: [tokenId], references: [id], onDelete: Cascade)
  price            Float
  oneHourEvolution Float
  oneDayEvolution  Float
  createdAt        DateTime @default(now())
}
